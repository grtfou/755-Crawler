<CrawlerWidget>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 192,192,192,0.3
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            id: btn_start
            text: 'Start'
            size_hint: None, None
            pos_hint: {'center_x':.7, 'center_y': .35}
            on_press: root.check_status(url.text)
            # on_press: root.check_status(url.text, stop_date.text)

        Label:
            id: label_1
            text: '755 URL'
            size_hint: None, None
            pos_hint: {'center_x':.2, 'center_y': .8}
        Label:
            id: label_2
            text: 'End Date'
            size_hint: None, None
            pos_hint: {'center_x':.2, 'center_y': .6}
        TextInput:
            id: url
            text: 'http://7gogo.jp/talks/YtykfykuJfMT'
            focus: True
            multiline: False
            size_hint: .35, .05
            pos_hint: {'center_x':.45, 'center_y': .8}
            font_size: min(self.height, self.width) / 2
